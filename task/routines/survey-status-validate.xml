            <task definition_id="utilities_echo_v1" id="utilities_echo_v1_6" name="Create diff for wait node" x="210" y="609">
                <version>1</version>
                <configured>true</configured>
                <defers>false</defers>
                <deferrable>false</deferrable>
                <visible>true</visible>
                <parameters>
                    <parameter dependsOnId="" dependsOnValue="" id="input" label="Input" menu="" required="true" tooltip="">&lt;%= config = JSON.parse(@inputs['Current Config'] )
newStart = Date.parse(config["Survey Period"]['Start']) 
newEnd = Date.parse(config["Survey Period"]['Stop'])
today = Date.today 

# Find the number of days to wait to adjust status.
# This handles enabling the start date if greather than today
diff = newStart - today

# If diff is less than zero, check against the end date
# This handles if the end date is after today.  We add one
# so that the end date is the day after then stop date meaning
# the active dates listed on the survey are inclusive.
# Based on when this fires and and timezone this could result in
# later than expected execution.
if (diff &lt;= 0)
  diff = (newEnd - today) + 1
end

# This handles if both start and end happen to be before today.
if (diff &lt; 0)
  diff = 0
end
diff.to_i%&gt;</parameter>
                </parameters>
                <messages>
                    <message type="Complete"></message>
                </messages>
                <dependents>
