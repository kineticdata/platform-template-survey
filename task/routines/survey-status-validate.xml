            <task definition_id="utilities_echo_v1" id="utilities_echo_v1_1" name="Has start or end time changed" x="211" y="16">
                <version>1</version>
                <configured>true</configured>
                <defers>false</defers>
                <deferrable>false</deferrable>
                <visible>true</visible>
                <parameters>
                    <parameter dependsOnId="" dependsOnValue="" id="input" label="Input" menu="" required="true" tooltip="">&lt;%= 
# Parse the current and previous configs
current_config = @inputs['Current Config'].to_s.empty? ? {} : JSON.parse(@inputs['Current Config'])
prev_config = @inputs['Previous Config'].to_s.empty? ? {} : JSON.parse(@inputs['Previous Config'])

# Calculate the Current / Prev Start &amp; Stop Dates
current_start = current_config.has_key?('Survey Period') ? current_config["Survey Period"]['Start'] : ""
current_end = current_config.has_key?('Survey Period') ? current_config["Survey Period"]['Stop'] : ""
prev_start = prev_config.has_key?('Survey Period') ? prev_config["Survey Period"]['Start'] : ""
prev_end = prev_config.has_key?('Survey Period') ? prev_config["Survey Period"]['Stop'] : ""

today = Date.today 
current_status = @inputs['Current Status']

# Compare current/prev start dates and current/prev end dates or if 
# current start = today and current_status = active (this last condition
# handles the condition when the survey was created and both the start and stop
# dates were in the future.  One pass through here will handle the wait for the
# start, and once the status is Active, a second pass will trigger and generate
# the wait for the stop period.
current_start != prev_start || current_end != prev_end || (Date.parse(current_start) == today &amp;&amp; current_status == "Active")%&gt;</parameter>
                </parameters>
                <messages></messages>
                <dependents>
                    <task label="Handle Update" type="Complete" value="@results['Has start or end time changed']['output'] == &quot;true&quot;">utilities_echo_v1_2</task>
                </dependents>
            </task>
